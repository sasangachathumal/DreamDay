@model (DreamDay.Models.ApplicationUser user, string role)
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" name="Id" value="@Model.user.Id" />

    <div class="form-group">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.user.Email" />
    </div>

    <div class="form-group">
        <label>First Name</label>
        <input name="FirstName" class="form-control" value="@Model.user.FirstName" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input name="LastName" class="form-control" value="@Model.user.LastName" />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input name="PhoneNumber" class="form-control" value="@Model.user.PhoneNumber" />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select name="role" class="form-control">
            @foreach (var item in ViewBag.Roles as SelectList)
            {
                <option value="@item.Text" selected="@(item.Text == Model.role)">
                    @item.Text
                </option>
            }
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
</form>
