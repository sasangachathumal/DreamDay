@model IEnumerable<DreamDay.Models.Vendor>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="container-fluid">
    <h1>Vendor Catalog</h1>

    <p class="w-100 pt-3 pb-3">
        <a class="btn btn-outline-secondary" asp-action="Index">Back to Booking List</a>
    </p>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div id="carouselExample-@item.Id" class="carousel slide">
                            <div class="carousel-inner" style="border-top-left-radius: 0.375rem; border-top-right-radius: 0.375rem;">
                                @foreach (var image in item.VendorImages)
                                {
                                    <div class="carousel-item active">
                                        <img src="@image.ImageURL" class="d-block w-100">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample-@item.Id" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample-@item.Id" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <div class="card-body d-grid">
                            <h2 class="text-black">@item.Name</h2>
                            <h4 class="text-black">@item.VendorCategory?.Name</h4>
                            <p class="mb-1">@item.Phone | @item.Email</p>
                            <p class="text-black">@item.Description</p>
                            <div class="row">
                                <div class="col-md-6 d-grid">
                                    <a class="btn btn-primary mt-2" asp-action="PackageView" asp-route-id="@item.Id">View Packages</a>
                                </div>
                                <div class="col-md-6 d-grid">
                                    <a class="btn btn-info mt-2" asp-action="ReviewView" asp-route-id="@item.Id">View Reviews</a>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

