
@{
    ViewData["Title"] = "SelectPlanner";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
@model List<ApplicationUser>

<div class="container-fluid">
    <h1>Select a Planner</h1>

    <p class="w-100 pt-3 pb-3">
        <a class="btn btn-outline-secondary" asp-action="Dashboard" asp-controller="Client">Back to Dashboard</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-controller="Weddings" asp-action="AssignPllaner" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Select</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

