@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Vendor";
}

<h2>Add Vendor</h2>

<form method="post" asp-action="VendorAdd">
    <div class="form-group">
        <label for="Name">Vendor Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description"required></textarea>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="VendorCategoryId">Vendor Category</label>
        <select class="form-control" id="VendorCategoryId" name="VendorCategoryId" required>
            <option value="">Select Vendor Category</option>
            @foreach (var category in ViewBag.VendorCategories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>

    </div>
    <button type="submit" class="btn btn-primary">Save Vendor</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @ViewData["ErrorMessage"]
    </div>
}
