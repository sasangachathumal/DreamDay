@model IEnumerable<DreamDay.Models.Guest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="container-fluid">
    <h1>Wedding Guest List</h1>

    <p class="w-100 pt-3 pb-3">
        <a class="btn btn-primary" asp-action="Create">Add New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Guest Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RSVP)
                </th>
                <th>
                    Meal Preference
                </th>
                <th>
                    Table Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @if (item.RSVP)
                        {
                            <span class="badge rounded-pill text-bg-success p-2">Attending</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill text-bg-warning p-2">Not Attending</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MealPreference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableNumber)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info ms-3 me-3" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
