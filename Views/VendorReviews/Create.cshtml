@model DreamDay.Models.VendorReviews

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="container-fluid">
    <h1>Provide Review To Vendor</h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VendorID" asp-items="ViewBag.VendorID" />
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" min="1" max="5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 d-grid">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div class="mt-5 d-grid">
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="VendorPackageBookings">Back to List</a>
            </div>
        </div>
    </div>
</div>
