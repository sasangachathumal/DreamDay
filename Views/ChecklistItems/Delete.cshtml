@model DreamDay.Models.ChecklistItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<div class="container-fluid">
    <h1>Delete Checklist Item</h1>

    <h3>Are you sure you want to delete this?</h3>
    <hr/>

    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3">
                            <h5 class="mb-1">Title</h5>
                        </div>
                        <div class="col-md-9">
                            <p class="mb-1">@Model.Title</p>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3">
                            <h5 class="mb-1">Description</h5>
                        </div>
                        <div class="col-md-9">
                            @if (@Model.Description == null)
                            {
                                <p class="mb-1">~ not provided ~</p>
                            }
                            else
                            {
                                <p class="mb-1">@Model.Description</p>
                            }
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3">
                            <h5 class="mb-1">Due Date & Time</h5>
                        </div>
                        <div class="col-md-9">
                            <p class="mb-1">@Model.DateTime</p>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3">
                            <h5 class="mb-1">Status</h5>
                        </div>
                        <div class="col-md-9">
                            @if (@Model.IsDone)
                            {
                                <span class="badge rounded-pill text-bg-success p-2">Completed</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill text-bg-warning p-2">Not Completed</span>
                            }
                        </div>
                    </div>
                </li>
            </ul>
            <div class="mt-5 d-grid">
                <form asp-action="Delete" class="d-grid">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
            <div class="mt-5 d-grid">
                <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
